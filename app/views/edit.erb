<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Robot World</a>
    </div>
    <ul class="nav navbar-nav pull-right">
      <li><a href="/robots/new">New Robot</a></li>
      <li><a href="/robots">Robot Directory</a></li>
      <li><a href="/">Dashboard</a></li>
    </ul>
  </div>
</nav>
<div class="row">
  <div class="col-md-4">

    <form class="form-horizontal" action='/robots/<%= @robot.name %>' method="POST">
      <fieldset class="form-group">
        <input type="hidden" name="_method" value="PUT"/>

        <label for="name">Name</label>
        <input type="text" name="robot[name]" class="form-control" id="name" placeholder="Enter Name" value="<%= @robot.name %>">
        <small class="text-muted">We'll never share or sell your robot info to any third parties.</small><br><br>

        <label for="city">City</label>
        <input type="text" name="robot[city]" class="form-control" id="city" placeholder="Enter City" value="<%= @robot.city %>">
      </div>
    </div>

    <label for="avatar">Avatar</label>
    <input type="text" name="robot[avatar]" class="form-control" id="avatar" placeholder="Enter Avatar Character-Code" value="<%= @robot.avatar %>">
    <small class="text-muted">Visit <a href="https://robohash.org".>robohash</a> and add your character-code to the path to preview your robot!</small><br><br>

    <label for="birthdate">Birthdate</label>
    <input type="date" name="robot[birthdate]" class="form-control" id="birthdate" placeholder="Enter Birthdate" value="<%= @robot.birthdate %>">

    <label for="date_hired">Date Hired</label>
    <input type="date" name="robot[date_hired]" class="form-control" id="date_hired" placeholder="Enter Hire Date" value="<%= @robot.date_hired %>">

    <label for="department">Department</label>
    <input type="text" name="robot[department]" class="form-control" id="department" placeholder="Enter Department" value="<%= @robot.department %>">

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
